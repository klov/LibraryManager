}

.navigationTreeContainer{
    height: 80vh;
    border-right-style:solid;
    border-right-width: 1px;
    background-color:#eee;
    border-color: #E7E7E7;
}

.box{
    box-shadow: 0px -1px 5px #0f0f0f;
    border-color: #E7E7E7;
    border-width: 1px;
    border-top-style: solid;
}

.input-small{
    width: 22em;
    padding: 2px 5px;
    font-size: 12px;
    line-height: 1.5; 
    border-radius: 3px;
}

.modal-box{
    width:60%;
}

.btn-file {
    position: relative;
    overflow: hidden;
    margin-left: 0px;
}
.btn-form {
    position: relative;
    overflow: hidden;
    margin-top: 5px;
    margin-left: 0px;
}
.btn-file input[type=file] {
    position: absolute;
    top: 0;
    right: 0;
    min-width: 100%;
    min-height: 100%;
    font-size: 100px;
    text-align: right;
    filter: alpha(opacity=0);
    opacity: 0;
    outline: none;
    background: white;
    cursor: inherit;
    display: block;
}

.pdf-frame{
    width:100%;
    height:45em;
    min-height: 10em;
    min-width: 50em;
    background-color:#999;
    margin:  5px;
}

.my-modal-dialog{
    width: 90%;
    min-width: 90em;
    margin: 2em auto;
}

.block{
    margin-left: 15px;
    margin-top: 13px;
    margin-right: 10px;
    margin-bottom: -1px;
    padding: 2px;
    border: 1px solid #ddd;
    border-radius: 4px;
    display: block;
    overflow:auto;
    background-color: #ffffff;
}

.btn-bookmark{
    margin: -1px;
}

.small-block{
    height: 7em;
}

.large-block{
     height: 38em;
}

.average-block{
  height:    20em;
}

.grouping-block{
    height: 10em; 
    margin-top: 13px;
    padding: 5px;
    border: 1px solid #999;
    border-radius: 4px;
    display: block;
    overflow:auto;
    background-color: #ffffff;
}

.bookmark{
    margin-top: -1px;
    font-size: 2em;
    width: 1em;
    height: 1em;
    color: tomato;
    padding: -1px;
}
.rows:focus{
    background-color: #a94442;
}

.bookmark:active{
    color: #a94442;
}

.glyphicon-refresh-animate {
    -animation: spin .7s infinite linear;
    -webkit-animation: spin2 .7s infinite linear;
}

.form-signin {
    width: 24em;
    padding: 2px;
    margin: 0px auto;
}

@-webkit-keyframes spin2 {
    from { -webkit-transform: rotate(0deg);}
    to { -webkit-transform: rotate(360deg);}
}

@keyframes spin {
    from { transform: scale(1) rotate(0deg);}
    to { transform: scale(1) rotate(360deg);}
}

.selectlines{
    background-color: rgb(217, 225, 248);
}


